<section class="list-details">
  <div class="row">
    <div class="col-md-offset-3 col-md-6 col-sm-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">
            <a data-toggle="collapse" href="#collapse1">
              <%= @list.name %> - List details
            </a>
          </h4>
        </div>
        <div id="collapse1" class="panel-collapse-mobile panel-collapse collapse in" aria-expanded="true">
          <div class="panel-body">
            <div class="row">
              <div class="col-sm-4">
                <h3><%= @list.name %></h3>
              </div>
              <div class="col-sm-8">
                <dl>
                  <dt>Type</dt>
                  <% if @list.private? %>
                  <dd>Private</dd>
                <% else  %>
                  <dd>Public</dd>
                  <% end  %>
                  <dt>Created by</dt>
                  <dd>
                    <%= @list.user.email %>
                  </dd>
                </dl>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="task-list">
  <div class="row">
    <div class="col-md-offset-3 col-md-6 col-sm-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          New Task
        </div>
        <div class="panel-body">
          <%= simple_form_for [@list, @task], remote:true, html: {class:'form-inline'} do |f| %>
          <div class="row">
            <div class="col-md-9 col-sm-12 form-group">
              <%= f.input :name, label: false, placeholder: 'Enter new task', input_html: { class: 'form-control', style: 'width:96%'} %>
            </div>
            <div class="col-md-3 col-sm-12 form-group">
              <%= f.button :submit, 'Create Task', class: 'btn btn-primary' %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-offset-3 col-md-6 col-sm-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          Tasks
        </div>
        <div class="panel-body">
          <table class="table table-striped table-hover">
            <thead>
              <th>Name</th>
              <th>Actions</th>
            </thead>
            <tbody id="tasks">
              <%= render @list.tasks.order(id: :desc) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
