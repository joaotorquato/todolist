<section class="list-details">
  <div class="row">
    <div class="col-md-offset-3 col-md-6 col-sm-12 text-center">
      <h1>To-Do List:
        <%= @list.name %></h1>
    </div>
  </div>

  <div class="row">
    <div class="col-md-offset-3 col-md-6 col-sm-12 text-center">
      <dl>
        <dt>Type</dt>
        <% if @list.private? %>
        <dd>Private</dd>
      <% else  %>
        <dd>Public</dd>
        <% end  %>
        <dt>Created by</dt>
        <dd>
          <%= @list.user.email %>
        </dd>
      </dl>
    </div>
  </div>
</section>

<section class="task-list">
  <div class="row">
    <div class="col-md-offset-3 col-md-6 col-sm-12 text-center">
      <div class="page-header">
        <h4>Tasks</h4>
      </div>
      <%= simple_form_for [@list, @task], remote:true, html: {class:'form-inline'} do |f| %>
      <div class="row">
        <div class="col-md-9 col-sm-12 form-group">
          <%= f.input :name, label: false, placeholder: 'Enter new task', input_html: { class: 'form-control', style: 'width:96%'} %>
        </div>
        <div class="col-md-3 col-sm-12 form-group">
          <%= f.button :submit, 'Create task', class: 'btn btn-primary' %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-offset-3 col-md-6 col-sm-12 text-center">
      <div style="height:20px"></div>
      <table class="table table-condensed">
        <tbody id="tasks">
          <%= render @list.tasks.order(id: :desc) %>
        </tbody>
      </table>
    </div>
  </div>
</section>
