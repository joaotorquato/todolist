<div class="row">
  <div class="col-md-offset-3 col-md-6 col-sm-12 text-center">
    <h3>To-Do List:
      <%= @list.name %></h3>
  </div>
</div>

<div class="row">
  <div class="col-md-offset-3 col-md-6 col-sm-12 text-center">
    <dl>
      <dt>Type</dt>
      <% if @list.private?  %>
      <dd>Private</dd>
      <% else  %>
      <dd>Public</dd>
      <% end  %>
      <dt>Created by</dt>
      <dd> <%= @list.user.email %> </dd>
    </dl>
  </div>
</div>
