<section class="list-list">
  <div class="row">
    <div class="col-md-offset-3 col-md-6 col-sm-12 text-center">
      <div class="page-header">
        <h1>
          <%= @title  %>
        </h1>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-offset-3 col-md-6 col-sm-12">
      <strong class="hidden-xs">Filter:</strong>
      <%= link_to 'Your lists', lists_path, class: 'btn btn-default btn-xs' %>
      <%= link_to 'Public lists', public_lists_path, class: 'btn btn-default btn-xs' %>
      <%= link_to 'Your favorite lists', favorite_lists_path, class: 'btn btn-default btn-xs' %>
    </div>
  </div>
  <div style="height:15px"></div>
  <div class="row">
    <div class="col-md-offset-3 col-md-6 col-sm-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          Lists
        </div>
        <div class="panel-body">
          <% if @lists_empty_message.present? %>
          <h4 class="text-center">
            <%= @lists_empty_message %>
          </h4>
        <% else  %>
          <table class="table table-striped task-table">
            <thead>
              <th>Name</th>
              <th>Actions</th>
            </thead>
            <tbody>
              <%= render @lists %>
            </tbody>
          </table>
          <% end  %>
        </div>
      </div>
    </div>
  </div>
</section>
