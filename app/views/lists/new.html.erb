<div class="row">
  <div class="col-md-offset-3 col-md-6 col-sm-12">
    <% if @list.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-danger">
        The form contains
        <%= pluralize(@list.errors.count,"error")%>.
        Please check the fields.
      </div>
    </div>
    <% end %>
    <div class="page-header text-center">
      <h1>Create a new List</h1>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        New List
      </div>
      <div class="panel-body">
        <%= simple_form_for @list do |f| %>
        <%= f.input :name, input_html: { class: 'form-control'}, wrapper_html: { class: 'form-group' } %>
        <%= f.input :private, label: 'Is this list private?', wrapper_html: { class: 'form-group' }, checked: false, as: :radio_buttons %>
        <%= f.button :submit, 'Create', class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
